<Window x:Class="game_launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game_launcher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        Title="GameLauncher" Height="450" Width="800">
    <Grid>
        <Image Source="Images/splashpng.png" HorizontalAlignment="Left"></Image>
        <Image Margin="554,10,10,10" Stretch="Fill" Source="Images/knight.png"/>
        <TextBlock Name="StateText" Text="Checking for updates" Margin="89,216,89,216" Foreground="White" TextAlignment="Center"></TextBlock>
        <Button Name="CloseButton" Content="x" Click="CloseButton_Click" Margin="764,10,10,417"/>
    </Grid>
</Window>
