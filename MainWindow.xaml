<Window x:Class="game_launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game_launcher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        Title="GameLauncher" Height="450" Width="800"
        MouseDown="Window_MouseDown" FontFamily="Constantia" FontWeight="Normal">
    <Grid>
        <Image Source="Images/background.png" HorizontalAlignment="Left" Margin="76,27,0,-27"/>
        <Image Margin="443,28,-8,20" Stretch="UniformToFill" Source="Images/girl.png"/>
        <TextBlock Name="StateText" Text="Checking for updates" Margin="106,87,321,39" Foreground="White" TextAlignment="Center" FontStyle="Normal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Name="VersionText" Text="0.0.0" Margin="0,412,24,20" Foreground="White" TextAlignment="Center" HorizontalAlignment="Right"/>
        <Button Name="CloseButton" Click="CloseButton_Click" Margin="683,28,35,392" Background="Transparent" BorderThickness="0" RenderTransformOrigin="0.5,0.5">
            <Image Source="Images/close button.png" Width="80" Height="30"/>
        </Button>

    </Grid>
</Window>
